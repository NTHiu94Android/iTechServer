  <script>
    var win = navigator.platform.indexOf('Win') > -1;
    if (win && document.querySelector('#sidenav-scrollbar')) {
      var options = {
        damping: '0.5'
      }
      Scrollbar.init(document.querySelector('#sidenav-scrollbar'), options);
    }
  </script>

  <script>
    let status = document.querySelectorAll('.status');
    let bgStatus = document.querySelectorAll('.bgStatus');

    const statuses = Array.from(status).map(span => span.textContent);

    for(let i = 0; i < statuses.length; i++) {
      if(statuses[i] === 'Delivered') {
        bgStatus[i].style.backgroundColor = 'green';
      } else if(statuses[i] === 'Processing') {
        bgStatus[i].style.backgroundColor = 'gold';
      } else if(statuses[i] === 'Shipping') {
        bgStatus[i].style.backgroundColor = 'blue';
      } else if(statuses[i] === 'Canceled') {
        bgStatus[i].style.backgroundColor = 'red';
      }
    }

  </script>

  <script>
    function gotoOrderDetail(_idOrder) {
      window.location.href = `http://localhost:3000/orders/${_idOrder}/order-detail`;
    }
  </script>
