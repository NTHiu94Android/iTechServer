  <!-- Main -->
  <main class="main-content position-relative border-radius-lg ">
    <!-- Navbar -->
    <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl " id="navbarBlur"
      data-scroll="false">
      <div class="container-fluid py-1 px-3">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
            <li class="breadcrumb-item text-sm"><a class="opacity-5 text-white" href="javascript:;">Trang chủ</a></li>
            <li class="breadcrumb-item text-sm text-white active" aria-current="page">Đơn hàng</li>
          </ol>
        </nav>
        <form action="/search" method="GET">
          <div class="collapse navbar-collapse mt-sm-0 mt-2 me-md-0 me-sm-4" id="navbar">
            <div class="ms-md-auto pe-md-3 d-flex align-items-center">
              <input type="hidden" name="name" value="order">
              <div class="input-group">
                <span class="input-group-text text-body"><i class="fas fa-search" aria-hidden="true"></i></span>
                <input type="text" name="keyword" class="form-control" placeholder="Nhập mã đơn hàng .." onkeydown="handleEnter(event)">
              </div>
            </div>
          </div>
        </form>
        <script>
          function handleEnter(event) {
            if (event.keyCode === 13) {
              event.preventDefault();
              const keyword = event.target.value;
              window.location.href = '/search' + '?keyword=' + keyword + '&name=order';
            }
          }
        </script>
      </div>
    </nav>
    <!-- End Navbar -->
    <div class="container-fluid py-4">
      <div class="row">
        <div class="col-12">
          <div class="card mb-4">
            <div class="card-body px-0 pt-0 pb-2">
              <div class="table-responsive p-4">
                <table class="table align-items-center mb-0">
                  <thead>
                    <tr>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">ID đơn hàng
                      </th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Tổng tiền
                      </th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Trạng thái
                      </th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Thanh toán
                      </th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Ngày tạo</th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Người đặt
                        hàng</th>
                    </tr>
                  </thead>

                  <tbody>
                    {{#each orders}}
                    <tr>
                      <td style="align-middle text-center text-sm">
                        <span class="text-secondary text-xs font-weight-bold"
                          style="margin-top: 8px; margin-bottom: 8px;">ID:{{this._id}}</span>
                      </td>
                      <td style="align-middle text-center text-sm">
                        <span class="text-secondary text-xs font-weight-bold"
                          style="margin-top: 8px; margin-bottom: 8px;">{{this.totalPrice}} $</span>
                      </td>
                      <td style="align-middle text-center text-sm">

                        {{!-- {{#isEqual this.status 'Delivered'}}
                        <div class="d-flex px-2 py-1 justify-content-center align-items-center"
                          style="width: 90px; background-color: gold; padding: 8px; border-radius: 10px;">
                          <span class="text-secondary text-xs font-weight-bold"
                            style="margin-top: 8px; margin-bottom: 8px; color: black;">{{this.status}}</span>
                        </div>
                        {{else}}
                        <div class="d-flex px-2 py-1 justify-content-center align-items-center"
                          style="width: 90px; background-color: red; padding: 8px; border-radius: 10px;">
                          <span class="text-secondary text-xs font-weight-bold"
                            style="margin-top: 8px; margin-bottom: 8px; color: black;">{{this.status}}</span>
                        </div>

                        {{/isEqual}} --}}

                        <div id="bgStatus" class="d-flex px-2 py-1 justify-content-center align-items-center bgStatus"
                          style="width: 90px; background-color: gold; padding: 8px; border-radius: 10px;">
                          <span id="status" class=" text-xs  status"
                            style="margin-top: 8px; margin-bottom: 8px; color: white; font-weight: 800;">{{this.status}}</span>
                        </div>
                      </td>
                      <td style="align-middle text-center text-sm">
                        <span class="text-secondary text-xs font-weight-bold"
                          style="margin-top: 8px; margin-bottom: 8px;">{{this.paymentMethod}}</span>
                      </td>
                      <td style="align-middle text-center text-sm">
                        <span class="text-secondary text-xs font-weight-bold"
                          style="margin-top: 8px; margin-bottom: 8px;">{{this.dateCreate}}</span>
                      </td>
                      <td style="align-middle text-center text-sm">
                        <div class="d-flex px-2 py-1" style="align-items: center;">
                          <div>
                            <img src="{{this.avatarUser}}" class="avatar avatar-sm me-3" alt="user1">
                          </div>
                          <div class="d-flex flex-column">
                            <span class="text-secondary text-xs font-weight-bold"
                              style="margin-top: 8px; margin-bottom: 8px;">{{this.nameUser}}</span>
                            <span class="text-secondary text-xs font-weight-bold"
                              style="margin-top: 8px; margin-bottom: 8px;">{{this.phoneUser}}</span>
                          </div>
                        </div>
                      </td>

                      <td style="align-middle text-center text-sm">
                        <button onclick="gotoOrderDetail('{{this._id}}')"
                          class="btn btn-xs mb-3 mt-3 btn-outline-secondary">
                          Chi tiết
                        </button>
                      </td>
                    </tr>
                    {{/each}}
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
