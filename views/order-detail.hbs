    </nav>
    <!-- End Navbar -->
    <div class="container-fluid py-4">
      <div class="row">
        <div class="col-12">
          <div class="card mb-4">

            <div class="card-body px-0 pt-0 pb-2">
              <div class="table-responsive p-4">

                {{!-- Thong tin nguoi nhan --}}
                <h6>Thông tin người nhận</h6>
                <div class="row-spbw">
                    <span class="fl1">Họ tên: {{user.name}}</span>
                    <span class="fl1">Số điện thoại: {{user.numberPhone}}</span>
                    <span class="fl1">Địa chỉ: {{order.address}}</span>
                </div>

                <h6 style="margin-top: 30px;">Thông tin đơn hàng</h6>
                <div class="row-spbw">
                    <span class="fl1">Mã DH: {{order._id}}</span>
                    <span class="fl1" style="margin-left: 10px;">Ngày đặt hàng: {{order.dateCreate}}</span>
                    <span class="fl1">Trạng thái: {{order.status}}</span>
                </div>

                {{!-- DHCT --}}
                <div style="margin-top: 30px;">
                    <h6>Thông tin sản phẩm</h6>
                    <table class="table align-items-center mb-0">
                  <thead>
                    <tr>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Tên sản phẩm</th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Màu sắc</th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Số lượng</th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Số lượng còn lại</th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Giá tiền</th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Giá khuyến mãi</th>
                    </tr>
                  </thead>

                  <tbody>
                    {{#each orderDetails}}
                    <tr>
                      <td style="column-width: 200px;">
                        <div class="d-flex px-2 py-1">
                          <div>
                            <img src="{{this.image}}" class="avatar avatar-sm me-3" alt="user1">
                          </div>
                          <div class="d-flex flex-column justify-content-center" style="width: 400px;">
                            <h6 class="mb-0 text-sm" style="display: inline-block;
                              width: 250px;
                              white-space: nowrap;
                              overflow: hidden !important;
                              text-overflow: ellipsis;">{{this.nameProduct}}</h6>
                          </div>
                        </div>
                      </td>
                      <td style="white-space:pre-line">
                        <span class="text-secondary text-xs font-weight-bold"
                          style="margin-top: 8px; margin-bottom: 8px;">{{this.color}}</span>
                      </td>
                      {{!-- white-space:pre-line --}}
                      {{!-- align-middle text-center text-sm --}}
                      <td style="white-space:pre-line">
                        <span class="text-secondary text-xs font-weight-bold"
                          style="margin-top: 8px; margin-bottom: 8px;">{{this.quantity}}</span>
                      </td>
                      <td style="white-space:pre-line">
                        <span class="text-secondary text-xs font-weight-bold"
                          style="margin-top: 8px; margin-bottom: 8px;">{{this.inventory}}</span>
                      </td>
                      <td style="white-space:pre-line">
                        <span class="text-secondary text-xs font-weight-bold" style="text-decoration: line-through;">{{this.priceProduct}}$</span>
                      </td>
                      <td style="white-space:pre-line">
                        <span class="text-secondary text-xs font-weight-bold red">{{this.priceSale}}$</span>
                      </td>
                    </tr>
                    {{/each}}
                  </tbody>
                </table>
                </div>

                {{!-- Tong tien --}}
                <div style="margin-top: 30px; display: flex; flex-direction: row; justify-content: space-between; align-items: flex-end;">
                    {{#if order.check}}
                    <button style="width: 200px; height: 50px; padding: 10px; border-radius: 10px; 
                                    background-color: #f5365c; color: white; border: none;" 
                            onclick="handleDelivered('{{order._id}}')">
                        Xác nhận đơn hàng
                    </button>
                    {{else}}
                    <div style="margin-top: 20px; color: red; font-weight: bold; font-size: 16px;">
                        Đơn hàng đã được xác nhận
                    </div>
                    {{/if}}
                    <div style="display: flex; flex-direction: column; align-items: flex-end;">
                        <span class="fl1 top10">Tổng tiền: {{order.total}}$</span>
                        <span class="fl1 top10">Tổng tiền khuyến mãi: {{order.totalSale}}$</span>
                        <span class="fl1 top10">Mã giảm giá: {{order.codeSale}}$</span>
                        <span class="fl1 top10">Phương thức thanh toán: {{order.paymentMethod}}</span>
                        <span class="fl1 top10 total">Tổng tiền thanh toán: {{order.totalPrice}}$
                            {{!-- <span>88$</span> --}}
                        </span>
                    
                     </div>
                </div>
                
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
